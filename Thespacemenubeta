import java.util.Arrays;
import java.util.Scanner;
import java.awt.Menu;

public class Thespacemenubeta {
  
    boolean exit = false; 
    private void initialMenu() {
    System.out.println("~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    System.out.println("   Welcome to Space database");
    System.out.println("            menu            ");
    System.out.println("~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
}
private void printMenu() {
    System.out.println("\n~~~~Choose options below~~~~~");
    System.out.println("[1]~~~~weight equation~~~~~~~");
    System.out.println("[2]~~~~~Space quiz~~~~~~~~~~~");
    System.out.println("[3]~~~~~rocket ship game~~~~~");
    System.out.println("[4]~~~~~Exit~~~~~~~~~~~~~~~~~");

}
public void runMenu() {
    initialMenu();
    while(!exit) { //inside must have !exit
        printMenu();
        int choice = getUserIn();
        performAction(choice);
    }
}
private int getUserIn(){
    int choice = -1;
    Scanner OS = new Scanner(System.in);
    while(choice < 0 || choice > 2) {
        try {
           System.out.print("\nChoose a option below:");
            choice = Integer.parseInt(OS.nextLine());
        }
           catch(NumberFormatException e) { 
            System.out.println("Invalid option, choose another option");
           } 

    }
    return choice; 
}
private void performAction(int choice){ 
    switch(choice) {
        case 0:
        exit = true;
        System.out.println("thank you for using the server");
        break;
        case 1:
        pickRocketGame();
        break;
        case 2:
        pickSpaceweight();
        break;
        default:
        System.out.println("error has occured");
    }
}

private void pickSpaceweight() {
  Scanner weight = new Scanner(System.in);
  float spaceResult; 
  System.out.println("Type your weight before selecting the planet");
  int Spaceweight = weight.nextInt(); 
    int num = 8;
  
    switch(num) {
     
        case 0:
        exit = true;
        case 1:
        System.out.println("weight in Mercury calculations");
        
       spaceResult = (Spaceweight * 38) / 100; 
System.out.println(spaceResult + "lbs"); 
        break;
      
        case 2:
        System.out.println("weight in Venus eight calculations");
        spaceResult = (Spaceweight * 91) / 100;
        System.out.println(spaceResult + "lbs"); 
        break;
       
        case 3:
        System.out.println("weight in Earth weight calculations");
        spaceResult = Spaceweight;
        System.out.println(spaceResult + "lbs");
        break;

        case 4:
        System.out.println("weight in Mars weight calculations");
        spaceResult = (Spaceweight * 38) / 100;
        System.out.println(spaceResult + "lbs");
        break;

        case 5:
        System.out.println("weight in Jupiter weight calculations");
        spaceResult = (Spaceweight * 234) / 100;
        System.out.println(spaceResult + "lbs");
        break;

        case 6:
        System.out.println("weight in Saturn weight calculations");
        spaceResult = (Spaceweight * 106) / 100;
        System.out.println(spaceResult + "lbs");
        break;

        case 7:
        System.out.println("weight in Uranus weight calculations");
        spaceResult = (Spaceweight * 92) / 100;
System.out.println(spaceResult + "lbs");
        break;

        case 8:
        System.out.println("weight in Neptune weight calculations");
        spaceResult = (Spaceweight * 119) / 100;
        System.out.println(spaceResult + "lbs");
        break;
       
        break;
        default:
        System.out.println("error has occured");
    }
}
private void pickRocketGame() {
  int num = (int) (Math.random() * 4);
    switch(num) {
        case 0:
        exit = true;
        System.out.println("thank you for using the program");
        break;
        case 1:
        System.out.println("Planet Quiz");
        break;
        case 2:
        System.out.println("Planet weight calculations");
        break;
        default:
        System.out.println("error has occured");
    }
}
public static void main(String[] args) {
   Menu menu = new Menu(); 
   menu.runMenu(); // it is saying runMenu is undeclared?? im confused 

}

