import java.util.Arrays;
import java.util.Scanner;

public class Thespacemenubeta {
boolean exit;
    public void initialMenu() {
    System.out.println("~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    System.out.println("   Welcome to Space database");
    System.out.println("            menu            ");
    System.out.println("~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
}
public void printMenu() {
    System.out.println("\n~~~~Choose options below~~~~~");
    System.out.println("[1]~~~~weight equation~~~~~~~");
    System.out.println("[2]~~~~~Space quiz~~~~~~~~~~~");
    System.out.println("[3]~~~~~rocket ship game~~~~~");
    System.out.println("[4]~~~~~Exit~~~~~~~~~~~~~~~~~");

}
public void runMenu() {
    printMenu();
    While(!exit){
        printMenu();
        int choice = getUserIn();

        
    }
}
private void getUserIn(){
    int choice = -1;
    Scanner Kb = new Scanner(System.in);
    while(choice < 0 || choice > 3) {
        try {
           System.out.println("\nChoose a option below:");
            choice = Integer.parseInt(kb.nextLine());
        }
           catch(NumberFormatException e) { 
            System.out.println("Invalid option, choose another option");
           } 

    }
    return choice; 
}
private void performAct(){ 
    switch(choice) {
        case 0:
        exit = true;
        System.out.println("thank you for using the server");
        break;
        case 1:
        pickPlanetQuiz();
        break;
        case 2:
pickSpaceweight();
break;
        case 3:
        pickRocketGame();
        break;
        default:
        System.out.println("error has occured");
    }
}
private void pickPlanetQuiz() {
    int num = (int) (Math.random() * 4); 
    switch(num) {
        case 0:
        exit = true;
        System.out.println("thank you for using the server");
        break;
        case 1:
        System.out.println("Planet Quiz");
        break;
        case 2:
        System.out.println("Planet weight calculations");
break;
        case 3:
        System.out.println("Rocket ship game");
        break;
        default:
        System.out.println("error has occured");
    }
}
